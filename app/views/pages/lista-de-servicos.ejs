  <main>

    <div class="larguraPadrao">
      <h1>Resultados</h1>

      <div id="filtrar-container">
        <img src="imagem/Filtro.png" alt="Filtro" id="filtro">

        <div id="filtrar-items">
          <img src="imagem/delete.png" alt="Fechar Filtros" id="closeFilter">
          <form action="" method="post" class="NaoPropagar">
            <h2>Filtros</h2> 
            <label for="regiao">Região:</label>
            <input type="text" name="regiao" id="regiao">
              <label for="preco">Preço:</label>
              <div>
                <input type="number" name="preco" id="precoMax" placeholder="Min">
                <input type="number" name="preco" id="precoMin" placeholder="Max">
              </div>


              <label for="capac">Capacidade:</label>
              <div class="NaoPropagar">
                <input type="number" maxlength="3" name="capac" id="capacNum">
                <select name="capac" id="capacMed">
                  <option value="toneladas">Toneladas</option>
                  <option value="pessoas">Pessoas</option>
                  <option value="kg">Quilos</option>
                  <option value="litros">Litros</option>
                </select>
              </div>

            <h2>Ordenar</h2>
            <h3>Preço:</h3>
            <div>
              <input type="radio" name="preco" id="MaiorMenor" placeholder="Do maior ao menor" value="MaiorMenor">
              <label for="MaiorMenor">Do Maior ao Menor</label><br>
              <input type="radio" name="preco" id="MenorMaior" value="MenorMaior">
              <label for="MenorMaior">Do Menor ao Maior</label><br>
            </div>
              <h3>Avaliação:</h3>
              <div>
                <input type="radio" name="Avaliacao" id="MelhorPior" value="MelhorPior">
                <label for="MelhorPior">Da melhor a pior</label><br>
                <input type="radio" name="Avaliacao" id="PiorMelhor" value="PiorMelhor">
                <label for="PiorMelhor">Da pior a melhor</label><br>
              </div>

            <button type="submit">Aplicar</button>
          </form>


        </div>
      </div>
    </div>
